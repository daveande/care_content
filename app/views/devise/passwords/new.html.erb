<div class="container">
  <div class="sign_in_out">
    <h2>Forgot your password?</h2>
    <div class="row">
      <div class="span5">

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "well" }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.submit "Send me reset password instructions", :class => "btn btn-large btn-primary" %>
        <% end %>

        <%= render "links" %>
      </div>
    </div>
  </div>
</div>
