- if wide == true
  %header.navbar.navbar-fixed-top
    .navbar-inner
      .container-fluid
        = link_to(image_tag('logo.png', :alt => "Care Content"), root_url, :id => "logo")
        %nav
          %ul.nav.pull-right
            %li= link_to "Home", root_url
            %li= link_to "About", about_url
            - if current_user.nil?
              %li= link_to "Sign Up", new_user_registration_url
              %li= link_to "Sign In", new_user_session_url
            - else
              %li= link_to "Content", content_files_url
              %li= link_to "Sign Out", destroy_user_session_url, :method => "delete"
